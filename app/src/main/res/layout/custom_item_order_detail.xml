<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/dp5"
    android:orientation="vertical">

    <TextView
        android:id="@+id/nameProduct"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="@dimen/dp5"
        android:textStyle="bold"
        android:textColor="@color/colorBBB"
        android:textSize="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:paddingHorizontal="@dimen/dp5"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="12dp"
        android:background="@drawable/custom_background_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageOrderDetail"
            android:layout_marginHorizontal="@dimen/dp5"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <TextView
            android:id="@+id/priceOrderDetail"
            android:textSize="14dp"
            android:layout_gravity="center"
            android:gravity="left"
            android:layout_marginHorizontal="5dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/quantityOrderDetail"
            android:textSize="14dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginHorizontal="5dp"
            android:textStyle="bold"
            android:textColor="@color/text"
            android:layout_width="40dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/allpriceOrderDetail"
            android:textSize="14dp"
            android:layout_marginHorizontal="5dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="right"
            android:textColor="@color/colorBBB"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/iconAdd"
        android:layout_gravity="center"
        android:src="@drawable/ic_plus_order"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

</LinearLayout>