<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/hinhnen"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_toolbar_home"
        android:minHeight="?attr/actionBarSize"
        android:paddingRight="8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageNavLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back_24" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Chi tiết khách hàng"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit_24" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="120dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_profile"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    app:civ_border_width="0.2dp"
                    android:src="@drawable/man"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_plus"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignBottom="@id/img_profile"
                    android:layout_alignParentRight="true"
                    app:civ_border_color="@color/black"
                    android:layout_marginRight="@dimen/dp20"
                    android:src="@drawable/ic_camera"/>
            </RelativeLayout>
        </LinearLayout>
        <!--end-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp5"
            android:background="@color/colorAAA" />
        <!--end view-->
        <LinearLayout
            android:layout_marginHorizontal="@dimen/dp15"
            android:layout_marginVertical="@dimen/dp10"
            android:layout_gravity="center"
            android:gravity="center"
            android:elevation="@dimen/dp5"
            android:background="@drawable/custom_background_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="@dimen/dp10"
                android:src="@drawable/ic_contact_24"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <LinearLayout
                android:layout_marginRight="@dimen/dp15"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Tên:"
                    android:textSize="@dimen/dp20"
                    android:textStyle="bold"
                    android:textColor="@color/colorCCC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="Ly Luân Long"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBBB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginHorizontal="@dimen/dp15"
            android:layout_marginVertical="@dimen/dp10"
            android:layout_gravity="center"
            android:gravity="center"
            android:elevation="@dimen/dp5"
            android:background="@drawable/custom_background_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="@dimen/dp10"
                android:src="@drawable/ic_phone_24"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <LinearLayout
                android:layout_marginRight="@dimen/dp15"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Số điện thoại:"
                    android:textSize="@dimen/dp20"
                    android:textStyle="bold"
                    android:textColor="@color/colorCCC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="0947890889"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBBB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginHorizontal="@dimen/dp15"
            android:layout_marginVertical="@dimen/dp10"
            android:layout_gravity="center"
            android:gravity="center"
            android:elevation="@dimen/dp5"
            android:background="@drawable/custom_background_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="@dimen/dp10"
                android:src="@drawable/ic_location_on_24"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <LinearLayout
                android:layout_marginRight="@dimen/dp15"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Địa Chỉ: "
                    android:textSize="@dimen/dp20"
                    android:textStyle="bold"
                    android:textColor="@color/colorCCC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="Ly Tự Trọng, Phương 2, Quận 5"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:maxLines="3"
                    android:textColor="@color/colorBBB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginHorizontal="@dimen/dp15"
            android:layout_marginVertical="@dimen/dp10"
            android:layout_gravity="center"
            android:gravity="center"
            android:elevation="@dimen/dp5"
            android:background="@drawable/custom_background_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="@dimen/dp10"
                android:src="@drawable/ic_email_24"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <LinearLayout
                android:layout_marginRight="@dimen/dp15"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Email:"
                    android:textSize="@dimen/dp20"
                    android:textStyle="bold"
                    android:textColor="@color/colorCCC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="lyluanlong@gmail.com"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBBB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp20"
            android:layout_gravity="center"
            android:background="@drawable/custom_background_button_login"
            android:layout_width="200dp"
            android:layout_height="40dp">
            <TextView
                android:text="Cập Nhật"
                android:textColor="@color/white"
                android:textSize="@dimen/dp20"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>