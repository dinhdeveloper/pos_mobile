<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginVertical="@dimen/dp5"
        android:paddingVertical="@dimen/dp10"
        android:layout_weight="10"
        android:layout_marginHorizontal="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imageView_close"
            android:background="@drawable/custom_background_close_order"
            android:src="@drawable/ic_close_black_24"
            android:layout_width="24dp"
            android:layout_height="24dp"/>

        <TextView
            android:id="@+id/nameProduct"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_weight="1"
            android:text="ao thun nam"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <ImageView
            android:padding="@dimen/dp5"
            android:layout_margin="@dimen/dp5"
            android:layout_gravity="center"
            android:id="@+id/button_remove"
            android:background="@color/white"
            android:src="@drawable/ic_remove_24"
            android:layout_width="33dp"
            android:layout_height="33dp"/>
        <EditText
            android:id="@+id/quantity"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:textStyle="bold"
            tools:text="123"
            android:background="@color/white"

            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textColor="@color/text"
            android:layout_weight="1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:padding="@dimen/dp5"
            android:layout_gravity="center"
            android:id="@+id/button_add"
            android:background="@color/white"
            android:src="@drawable/ic_add_circle_24"
            android:layout_width="33dp"
            android:layout_height="33dp"/>

        <TextView
            android:id="@+id/priceProduct"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp5"
            android:layout_weight="1"
            android:gravity="right"
            android:text="123457808"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_marginVertical="5dp"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

</LinearLayout>