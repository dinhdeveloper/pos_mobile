<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hinhnen"
    android:id="@+id/layoutCreateCus"
    android:visibility="gone"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginHorizontal="@dimen/dp10"
        android:layout_marginVertical="@dimen/dp10"
        android:paddingVertical="@dimen/dp10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:text="Chi tiết khách hàng:"
            android:textSize="@dimen/dp20"
            android:textStyle="bold"
            android:textColor="@color/colorAAA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/ic_account_circle_24"
                android:layout_width="60dp"
                android:layout_height="60dp"/>

            <View
                android:background="@color/colorAAA"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_margin="@dimen/dp10"
                android:elevation="@dimen/dp5"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_margin="@dimen/dp10"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_contact_24"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <LinearLayout
                    android:id="@+id/layoutName"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_marginHorizontal="@dimen/dp10"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Tên: "
                        android:textColor="@color/colorAAA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/name_cus"
                        android:inputType="text"
                        android:textSize="@dimen/dp20"
                        android:textStyle="bold"
                        android:textColor="@color/dangnhap"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_margin="@dimen/dp10"
                android:elevation="@dimen/dp5"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_margin="@dimen/dp10"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_phone_24"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <LinearLayout
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_marginHorizontal="@dimen/dp10"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Số điện thoại: "
                        android:textColor="@color/colorAAA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/phone_cus"
                        android:inputType="phone"
                        android:textSize="@dimen/dp20"
                        android:textStyle="bold"
                        android:textColor="@color/dangnhap"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_margin="@dimen/dp10"
                android:elevation="@dimen/dp5"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_margin="@dimen/dp10"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_location_on_24"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <LinearLayout
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_marginHorizontal="@dimen/dp10"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Địa chỉ: "
                        android:textColor="@color/colorAAA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/address_cus"
                        android:inputType="text"
                        android:textSize="@dimen/dp20"
                        android:textStyle="bold"
                        android:textColor="@color/dangnhap"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_margin="@dimen/dp10"
                android:elevation="@dimen/dp5"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_margin="@dimen/dp10"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_email_24"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <LinearLayout
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_marginHorizontal="@dimen/dp10"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Email: "
                        android:textColor="@color/colorAAA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/email_cus"
                        android:inputType="textEmailAddress"
                        android:textSize="@dimen/dp20"
                        android:textStyle="bold"
                        android:textColor="@color/dangnhap"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnCreate"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:background="@drawable/custom_background_button_login"
                android:layout_width="200dp"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/txtUpdate"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/dp20"
                    android:text="Tạo mới"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/btnDelete"
                android:visibility="visible"
                android:layout_gravity="center"
                android:background="@drawable/custom_background_edittext_password_login"
                android:layout_width="100dp"
                android:layout_height="40dp">

                <TextView
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/dp20"
                    android:text="Xóa"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>