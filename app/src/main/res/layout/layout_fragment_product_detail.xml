<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/leveldata"
    android:background="@color/hinhnen"
    android:orientation="vertical">

    <include layout="@layout/layout_header_detail"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="@dimen/dp15"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <ImageView
                    android:id="@+id/imageProduct"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginHorizontal="@dimen/dp10"
                android:layout_marginVertical="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/nameProduct"
                    android:paddingVertical="@dimen/dp5"
                    android:background="@color/hinhnen"
                    android:focusableInTouchMode="true"
                    android:layout_gravity="center"
                    android:focusable="true"
                    android:inputType="none"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAAA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingVertical="@dimen/dp10"
                    android:layout_marginVertical="@dimen/dp5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_masanpham"
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"/>
                    <TextView
                        android:textSize="16dp"
                        android:layout_marginHorizontal="@dimen/dp10"
                        android:text="Mã sản phẩm: "
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/idProduct"
                        android:inputType="none"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/dangnhap"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:paddingVertical="@dimen/dp10"
                    android:orientation="horizontal"
                    android:layout_marginVertical="@dimen/dp5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_price"
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"/>
                    <TextView
                        android:textSize="16dp"
                        android:layout_marginHorizontal="@dimen/dp10"
                        android:text="Giá: "
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/priceProduct"
                            android:inputType="none"
                            android:layout_marginRight="@dimen/dp5"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textColor="@color/text"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:id="@+id/choosePrice"
                            android:visibility="gone"
                            android:layout_weight="1"
                            android:background="@drawable/custom_background_item_category"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="Chọn bảng giá"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_marginHorizontal="2dp"
                                android:layout_marginVertical="@dimen/dp5"
                                android:textSize="12dp"
                                android:textColor="@color/dangnhap"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:paddingVertical="@dimen/dp10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_ware_house"
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"/>
                    <TextView
                        android:textSize="16dp"
                        android:layout_marginHorizontal="@dimen/dp10"
                        android:text="Kho: "
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tonKho"
                        android:background="@color/hinhnen"
                        android:layout_gravity="center"
                        android:inputType="none"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorYellow"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:paddingVertical="@dimen/dp10"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal"
                    android:layout_marginVertical="@dimen/dp5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp20"
                        android:src="@drawable/ic_warehouse_safe" />
                    <TextView
                        android:textSize="16dp"
                        android:layout_marginHorizontal="@dimen/dp10"
                        android:text="Tồn kho an toàn(*): "
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/tonKhoAnToan"
                        android:background="@color/hinhnen"
                        android:layout_gravity="center"
                        android:gravity="start"
                        android:inputType="none"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorYellow"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <TextView
                    android:layout_marginVertical="@dimen/dp5"
                    android:layout_gravity="center"
                    android:text="Mô tả(*): "
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAAA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/description"
                    android:background="@color/hinhnen"
                    android:paddingVertical="5dp"
                    android:focusableInTouchMode="true"
                    android:text="@string/des"
                    android:layout_gravity="center"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginVertical="@dimen/dp5"
                        android:layout_gravity="center"
                        android:text="Barcode: "
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_weight="2"
                        android:textColor="@color/colorAAA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvBarCode"
                        android:layout_weight="1"
                        android:layout_marginVertical="@dimen/dp5"
                        android:layout_gravity="center"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/imvInBarcode"
                        android:padding="@dimen/dp5"
                        android:layout_marginHorizontal="@dimen/dp10"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_print"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/barCode"
                    android:layout_width="180dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="@dimen/dp5"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginVertical="@dimen/dp5"
                        android:layout_gravity="center"
                        android:text="QR code: "
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_weight="2"
                        android:textColor="@color/colorAAA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvQrcode"
                        android:layout_marginVertical="@dimen/dp5"
                        android:layout_gravity="center"
                        android:textSize="18dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textColor="@color/colorText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:id="@+id/imvInQrCode"
                        android:padding="@dimen/dp5"
                        android:layout_marginHorizontal="@dimen/dp10"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_print"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/qrCode"
                    android:layout_marginVertical="@dimen/dp5"
                    android:layout_gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <LinearLayout
                    android:id="@+id/btnUpdate"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/custom_background_button_login"
                    android:layout_width="160dp"
                    android:layout_height="40dp">
                    <TextView
                        android:text="Cập nhật"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:textColor="@color/titleTabColor"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>