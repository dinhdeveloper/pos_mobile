<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="@dimen/dp10"
    android:elevation="@dimen/dp5"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/custom_background_layout"
    android:id="@+id/layoutItemOrder"
    android:orientation="vertical">

    <LinearLayout
        android:padding="@dimen/dp10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/nameCustomer"
                android:layout_marginVertical="2dp"
                android:textColor="@color/colorAAA"
                android:textSize="@dimen/dp20"
                android:maxLines="1"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@drawable/ic_golden"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/orderId"
            android:maxLines="1"
            android:layout_marginVertical="2dp"
            android:textColor="@color/colorBBB"
            android:textSize="@dimen/dp20"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:gravity="center"
            android:layout_marginVertical="2dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/ic_phone_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/phoneCustomer"
                android:layout_marginHorizontal="@dimen/dp10"
                android:textColor="@color/colorText"
                android:textSize="@dimen/dp20"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginVertical="2dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:paddingTop="@dimen/dp5"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_location_on_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/addressCustomer"
                android:layout_marginHorizontal="@dimen/dp10"
                android:textColor="@color/colorText"
                android:maxLines="2"
                android:textSize="@dimen/dp20"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
            android:layout_marginVertical="2dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:paddingTop="@dimen/dp5"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_clock_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/createDay"
                android:layout_marginHorizontal="@dimen/dp10"
                android:textColor="@color/colorText"
                android:maxLines="2"
                android:textSize="@dimen/dp20"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnSubmit"
        android:background="@drawable/custom_border_button_success"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/status"
            android:textSize="@dimen/dp20"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>



</LinearLayout>