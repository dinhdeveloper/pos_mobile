<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/leveldata"
    android:background="@color/hinhnen"
    android:orientation="vertical">

    <include layout="@layout/layout_header_detail"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:elevation="@dimen/dp5"
                android:layout_marginVertical="@dimen/dp10"
                android:paddingVertical="@dimen/dp20"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/border_shape_white_layout_search_contact"
                android:layout_width="150dp"
                android:layout_height="120dp">

                <ImageView
                    android:id="@+id/imageLevel"
                    android:src="@drawable/ic_golden"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

            </LinearLayout>

            <View
                android:background="@color/colorCCC"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"/>

            <LinearLayout
                android:elevation="@dimen/dp5"
                android:orientation="vertical"
                android:layout_marginVertical="@dimen/dp20"
                android:layout_marginHorizontal="@dimen/dp20"
                android:paddingVertical="@dimen/dp10"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/border_shape_white_layout_search_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingHorizontal="@dimen/dp10"
                    android:text="Mô tả: "
                    android:textSize="18dp"
                    android:textColor="@color/background_toolbar_home"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <View
                    android:layout_marginVertical="@dimen/dp10"
                    android:background="@color/colorCCC"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>

                <TextView
                    android:id="@+id/description"
                    android:paddingHorizontal="@dimen/dp10"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/dp15"
                    android:text="@string/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:elevation="@dimen/dp5"
                android:orientation="vertical"
                android:layout_marginVertical="@dimen/dp20"
                android:layout_marginHorizontal="@dimen/dp20"
                android:paddingVertical="@dimen/dp10"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/border_shape_white_layout_search_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/nameLevel"
                    android:paddingHorizontal="@dimen/dp10"
                    android:text="Số người nhận được cấp độ Vip : "
                    android:textSize="18dp"
                    android:textColor="@color/background_toolbar_home"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <View
                    android:layout_marginVertical="@dimen/dp10"
                    android:background="@color/colorCCC"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>

                <TextView
                    android:id="@+id/discount"
                    android:paddingHorizontal="@dimen/dp10"
                    android:textColor="@color/dangnhap"
                    android:textStyle="bold"
                    android:textSize="@dimen/dp15"
                    android:text="@string/app_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btnSubmit"
                android:layout_marginRight="@dimen/dp15"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/custom_border_button_item_level"
                android:layout_width="150dp"
                android:layout_height="40dp">
                <TextView
                    android:text="Xem chi tiết"
                    android:textSize="@dimen/dp15"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/dangnhap"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnExit"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:layout_alignParentBottom="true"
                android:background="@drawable/custom_background_button_login"
                android:layout_width="160dp"
                android:layout_height="40dp">
                <TextView
                    android:text="Quay lại home"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:textColor="@color/titleTabColor"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>