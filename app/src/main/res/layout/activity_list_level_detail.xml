<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hinhnen"
    android:orientation="vertical">

    <LinearLayout
        android:paddingTop="@dimen/dp20"
        android:elevation="2dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Xem chi tiết"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/colorAAA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="@dimen/dp20"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_search"
                android:paddingRight="@dimen/dp15"
                android:layout_marginHorizontal="25dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/custom_background_search_level_detail"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_search" />

                <EditText
                    android:background="@color/white"
                    android:layout_width="200dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp15"
                    android:textColor="@color/colorText"
                    android:gravity="start|center"
                    android:hint="Lý Hiển Long, Trần..." />
            </LinearLayout>
        </LinearLayout>
        <!--end search-->

        <TextView
            android:text="Có tất cả 250 khách hàng"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#91D5DA"
            android:textSize="@dimen/dp15"
            android:textStyle="italic|bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Quay lại"
                        android:textStyle="bold"
                        android:textSize="23dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="@dimen/dp10"
                        android:textColor="@color/colorBBB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
        </RelativeLayout>




    </LinearLayout>

</android.support.constraint.ConstraintLayout>