<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical"
    android:id="@+id/layoutHome"
    android:clickable="true">

    <LinearLayout
        android:layout_marginHorizontal="@dimen/dp20"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/custom_background_icon_persion"
            android:layout_width="80dp"
            android:layout_height="80dp">
            <ImageView
                android:id="@+id/image_em"
                android:layout_gravity="center"
                android:src="@drawable/ic_icon_persion"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/dp10"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/full_name_employee"
                android:layout_marginVertical="@dimen/dp10"
                android:text="TRAN CANH DINH"
                android:textColor="@color/hinhnen_login"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_icon_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/level_employee"
                    android:layout_marginHorizontal="@dimen/dp10"
                    android:textColor="@color/dangnhap"
                    android:text="Admin"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/thongtin_taikhoan"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginHorizontal="18dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="@dimen/dp5"
                android:layout_gravity="center"
                android:src="@drawable/ic_icon_thongtintaikhoan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="26dp"
                android:layout_weight="1"
                android:text="Thông tin tài khoản"
                android:textSize="16dp"
                android:textColor="@color/colorBBB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="@color/colorBBB"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:id="@+id/thaydoi_mk"
            android:layout_marginVertical="@dimen/dp20"
            android:layout_marginHorizontal="18dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_baseline_lock_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="18dp"
                android:layout_weight="1"
                android:text="Thay đổi mật khẩu"
                android:textSize="16dp"
                android:textColor="@color/colorBBB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="@color/colorBBB"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:id="@+id/log_out"
            android:layout_marginVertical="@dimen/dp10"
            android:layout_marginHorizontal="18dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_icon_dangxuat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="18dp"
                android:layout_weight="1"
                android:text="Đăng xuất"
                android:textSize="16dp"
                android:textColor="@color/colorBBB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>